<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">


    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
<%=(image_tag("logo.png", width: '200', height: '75'))%>
                    </a>
                </li>
                <br>
                <li>
                    <a href="#">Dashboard</a>
                </li>
                <li><%= link_to (image_tag("edit.png", width: '15', height: '15')) + " My Templates", templates_path %></li>
                <li><%= link_to (image_tag("edit.png", width: '15', height: '15')) + " Edit my Profile", edit_user_registration_path %></li>
                <li>
                    <%= link_to (image_tag("out.png", width: '15', height: '15')) + " Exit", destroy_user_session_path,  :method=>'delete' %>
                </li>                

            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
<p id="notice"><%= notice %></p>

<h1>Your Documents</h1>

<table>
    <table class="table table-hover">
  <thead>
    <tr>
      <th>Date Created</th>
      <th>Sent to</th>
      <th>Signed</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.created_at.strftime("%b %d %Y at %I:%M %p") %></td>
        <td><%= document.recipient %></td>
        <td><%= image_tag('checkmark.png') if document.signature? %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Open PDF',  document_path(document, :format => "pdf") %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Delete', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th> Template Name </th>
      <th colspan="3"></th>
      
    </tr>
  </thead>

  <tbody>
    <% @templates.each do |template| %>
      <tr>
        <td><%= template.name %></td>
        <td><%= link_to 'Show', template %></td>
        <td><%= link_to 'Edit', edit_template_path(template) %></td>
        <td><%= link_to 'Destroy', template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= button_to 'Send a New Document', new_document_path, :class =>"btn btn-success", :method => :get  %>
 
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="/javascripts/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="/bootstrap.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>

</body>

</html>